                android:ems="10"
                android:inputType="number"
                android:text="0" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/medText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medicine" />

            <EditText
                android:id="@+id/medVal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:text="0" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="13dp">

            <TextView
                android:id="@+id/perceptionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Perception" />

            <EditText
                android:id="@+id/perceptionVal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:inputType="number"
                android:text="0" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/survivalID"
                android:layout_width="76dp"
                android:layout_height="wrap_content"
                android:text="Survival" />

            <EditText
                android:id="@+id/survivalVal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:text="0" />
        </TableRow>
    </TableLayout>

    <TableLayout
        android:id="@+id/dexTable"
        android:layout_width="166dp"
        android:layout_height="171dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/charTable"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wisTable">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/dexText"
                android:layout_width="131dp"
                android:layout_height="match_parent"
