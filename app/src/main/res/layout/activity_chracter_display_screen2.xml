                android:textSize="14sp" />

            <EditText
                android:id="@+id/relgionVal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:text="0" />

        </TableRow>

    </TableLayout>

    <TableLayout
