<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/SkillSheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="vertical"
    tools:context=".CharacterDisplayScreen2"
    android:baselineAligned="false">

    <LinearLayout
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/Infos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/Info" />

        <Button
            android:id="@+id/Skillss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/Skills" />

        <Button
            android:id="@+id/Inventorys"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/Inventory" />

        <Button
            android:id="@+id/magics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/Magic" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/SWD"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TableLayout
                android:id="@+id/strTable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!--android:layout_weight="1"-->

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/strText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/Strength"
                        android:textSize="24sp"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow
                    android:layout_width="122dp"
                    android:layout_height="15dp">

                    <TextView
                        android:id="@+id/athText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/Athletics"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/athleticsVal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/blank"
                        android:textSize="18sp" />

                </TableRow>

            </TableLayout>

            <TableLayout
                android:id="@+id/wisTable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/wisText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/Wisdom"
                        android:textSize="24sp"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/animalHandleText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/AnimalHandling"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/animalHandleVal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/blank"
                        android:textSize="18sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/insightText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/Insight"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/insightVal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/blank"
                        android:textSize="18sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/medText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/Medicine"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/medVal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/blank"
                        android:textSize="18sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/perceptionText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/Perception"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/perceptionVal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/blank"
                        android:textSize="18sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/survivalID"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/Survival"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/survivalVal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/blank"
                        android:textSize="18sp" />
                </TableRow>
            </TableLayout>

            <TableLayout
                android:id="@+id/dexTable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/dexText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/Dexteriy"
                        android:textSize="24sp"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/stealthText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/Stealth"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/stealthVal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/blank"
                        android:textSize="18sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/acroText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/Acrobatics"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/acroVal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/blank"
                        android:textSize="18sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/sohText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/SOH"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/sohVal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/blank"
                        android:textSize="18sp" />
                </TableRow>

            </TableLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/IC"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TableLayout
                android:id="@+id/intTable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/intText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/Intelligence"
                        android:textSize="24sp"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/arcanaText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/Arcana"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/arcanaVal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/blank"
                        android:textSize="18sp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/historyText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/History"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/historyVal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/blank"
                        android:textSize="18sp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/investText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/Investigation"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/investVal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/blank"
                        android:textSize="18sp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/natureText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/Nature"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/natureVal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/blank"
                        android:textSize="18sp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/religonText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/Religion"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/relgionVal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/blank"
                        android:textSize="18sp" />

                </TableRow>

            </TableLayout>

            <TableLayout
                android:id="@+id/charTable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/charText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/Charisma"
                        android:textSize="24sp"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/deceptionText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/Deception"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/deceptionVal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/blank"
                        android:textSize="18sp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/intimidationText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/Intimidation"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/intimidationVal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/blank"
                        android:textSize="18sp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/performanceText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/Performance"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/performanceVal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/blank"
                        android:textSize="18sp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/persuasionText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/Persuasion"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/persuasionVal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/blank"
                        android:textSize="18sp" />
                </TableRow>

            </TableLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>


