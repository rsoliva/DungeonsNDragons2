    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChracterDisplayScreen2">

    <TableLayout
        android:id="@+id/strTable"
        android:layout_width="164dp"
        android:layout_height="87dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toTopOf="@+id/wisTable"
        app:layout_constraintEnd_toStartOf="@+id/intTable"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/strText"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:text="@string/Strength"
                android:textAlignment="center"
                android:textSize="24sp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="8dp" />
        </TableRow>

        <TableRow
            android:layout_width="122dp"
            android:layout_height="15dp">

            <TextView
                android:id="@+id/athText"
                android:layout_width="97dp"
                android:layout_height="wrap_content"
                android:text="Athletics"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="79dp" />

            <EditText
                android:id="@+id/athleticsVal"
                android:layout_width="79dp"
                android:layout_height="58dp"
                android:ems="10"
                android:inputType="number"
                android:text="0"
                android:textAlignment="viewStart"
                tools:layout_editor_absoluteX="212dp"
                tools:layout_editor_absoluteY="185dp" />

        </TableRow>

    </TableLayout>

    <TableLayout
        android:id="@+id/wisTable"
        android:layout_width="164dp"
        android:layout_height="235dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintBottom_toTopOf="@+id/dexTable"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/strTable">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/wisText"
                android:layout_width="129dp"
                android:layout_height="35dp"
                android:text="@string/Wisdom"
                android:textAlignment="textStart"
                android:textSize="24sp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="87dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/animalHandleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Animal Handling" />

            <EditText
                android:id="@+id/animalHandleVal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:text="0"
                android:textAlignment="viewStart" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/insightText"
                android:layout_width="wrap_content"
