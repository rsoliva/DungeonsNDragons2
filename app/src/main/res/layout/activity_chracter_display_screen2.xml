        android:layout_width="191dp"
        android:layout_height="219dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dexTable"
        app:layout_constraintTop_toBottomOf="@+id/intTable">

        <TableRow
            android:layout_width="100dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/charText"
                android:layout_width="139dp"
                android:layout_height="match_parent"
                android:text="@string/Charisma"
                android:textAlignment="center"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/deceptionText"
                android:layout_width="126dp"
                android:layout_height="wrap_content"
                android:text="@string/Deception"/>

            <EditText
                android:id="@+id/deceptionVal"
                android:layout_width="99dp"
                android:layout_height="wrap_content"
                android:ems="10"
